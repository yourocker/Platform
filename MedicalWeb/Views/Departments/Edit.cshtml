@model MedicalBot.Entities.Company.Department

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="d-flex align-items-center mb-4">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h2 class="mb-0">Редактирование отдела</h2>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    
                    @* Название *@
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Название подразделения</label>
                        <input asp-for="Name" class="form-control" required />
                    </div>

                    @* Родитель *@
                    <div class="mb-3">
                        <label class="form-label fw-bold">Вышестоящее подразделение</label>
                        <select asp-for="ParentId" class="form-select" asp-items="ViewBag.ParentDepartments">
                            <option value="">-- Головное подразделение --</option>
                        </select>
                    </div>

                    @* РУКОВОДИТЕЛЬ (С кнопкой сброса) *@
                    <div class="mb-4">
                        <label class="form-label fw-bold">Руководитель подразделения</label>
                        <div class="input-group">
                            <select asp-for="ManagerId" class="form-select" asp-items="ViewBag.Staff" id="managerSelect">
                                <option value="">-- Не назначен --</option>
                            </select>
                            <button type="button" class="btn btn-outline-danger" onclick="document.getElementById('managerSelect').value = ''" title="Сбросить руководителя">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-light px-4">Отмена</a>
                        <button type="submit" class="btn btn-primary px-4">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>