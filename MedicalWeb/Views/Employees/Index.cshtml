@model IEnumerable<MedicalBot.Entities.Company.Employee>

@{
    ViewData["Title"] = "Сотрудники";
}

<style>
    /* Стиль для уволенного сотрудника */
    .row-dismissed {
        background-color: rgba(220, 53, 69, 0.05) !important; /* Бледно-красный */
        color: #6c757d;
    }
    .row-dismissed .badge {
        filter: grayscale(1);
        opacity: 0.6;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-person-badge me-2"></i> Сотрудники</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus me-1"></i> Добавить сотрудника
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>ФИО</th>
                    <th>Должности и отделы</th>
                    <th>Контакты</th>
                    <th width="100"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr class="@(emp.IsDismissed ? "row-dismissed" : "")" 
                        data-bs-toggle="@(emp.IsDismissed ? "tooltip" : "")" 
                        data-bs-placement="left" 
                        title="@(emp.IsDismissed ? "Сотрудник уволен" : "")">
                        
                        <td class="fw-bold">
                            @emp.FullName
                            @if(emp.IsDismissed) {
                                <span class="badge bg-secondary ms-2" style="font-size: 0.7rem;">Уволен</span>
                            }
                        </td>
                        <td>
                            @foreach (var app in emp.StaffAppointments)
                            {
                                <div class="badge bg-info text-dark mb-1 d-block text-start">
                                    <i class="bi bi-geo-alt small"></i> @(app.Department?.Name ?? "---") <br/>
                                    <i class="bi bi-briefcase small"></i> @(app.Position?.Name ?? "---")
                                </div>
                            }
                        </td>
                        <td>
                            @foreach(var phone in emp.Phones) {
                                <div><i class="bi bi-telephone small text-muted"></i> @phone</div>
                            }
                            @foreach(var email in emp.Emails) {
                                <div><i class="bi bi-envelope small text-muted"></i> @email</div>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-link text-primary p-0 me-2">
                                <i class="bi bi-pencil-square" style="font-size: 1.2rem;"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        // Инициализация всплывающих подсказок Bootstrap
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}