@model MedicalBot.Entities.Platform.AppCategory

@{
    ViewData["Title"] = "Новый раздел";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="d-flex align-items-center mb-4">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h2 class="mb-0">Новый раздел меню</h2>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Например: Склад" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Icon" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-folder"></i></span>
                            <input asp-for="Icon" class="form-control" placeholder="Название иконки Bootstrap (например: box)" />
                        </div>
                        <small class="text-muted">Используются иконки Bootstrap (bi-название)</small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="SortOrder" class="form-label fw-bold"></label>
                        <input asp-for="SortOrder" type="number" class="form-control" value="0" />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary px-5">Создать раздел</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>