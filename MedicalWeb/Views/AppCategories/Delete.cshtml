@model MedicalBot.Entities.Platform.AppCategory
@{ ViewData["Title"] = "Удаление раздела"; bool canDelete = ViewBag.CanDelete ?? false; }
<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>Удаление раздела</h2>
        <p>Вы уверены, что хотите удалить раздел <strong>@Model.Name</strong>?</p>
        @if (!canDelete) {
            <div class="alert alert-danger">@ViewBag.Reason</div>
        }
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger" @(canDelete ? "" : "disabled")>Удалить</button> |
            <a asp-action="Index" class="btn btn-secondary">Отмена</a>
        </form>
    </div>
</div>