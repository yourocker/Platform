@using MedicalBot.Entities.Platform
@using Newtonsoft.Json
@model IEnumerable<MedicalBot.Entities.Platform.GenericObject>
@using Microsoft.AspNetCore.Html

@{
    var definition = ViewBag.Definition as AppDefinition;
    ViewData["Title"] = definition?.Name ?? "Объекты";
}

@functions {
    // ограничение на предпросмотре до 25 символов
    string Truncate(string value)
    {
        if (string.IsNullOrEmpty(value)) return value;
        return value.Length <= 25 ? value : value.Substring(0, 25) + "...";
    }

    // Единая функция отрисовки значения
    IHtmlContent renderValue(AppFieldDefinition field, string strVal)
    {
        if (string.IsNullOrWhiteSpace(strVal)) return HtmlString.Empty;

        // Обработка файлов
        if (field.DataType == FieldDataType.File)
        {
            var fileName = System.IO.Path.GetFileName(strVal);
            return new HtmlString($@"<a href=""{strVal}"" target=""_blank"" class=""badge bg-light text-primary border text-decoration-none"" title=""{fileName}"">
                                    <i class=""bi bi-paperclip""></i> {Truncate(fileName)}</a>");
        }
        
        // Обработка логических полей
        if (field.DataType == FieldDataType.Boolean)
        {
            var isTrue = strVal.ToLower() == "true";
            return isTrue 
                ? new HtmlString(@"<span class=""badge bg-success-subtle text-success border border-success-subtle""><i class=""bi bi-check-lg""></i> Да</span>")
                : new HtmlString(@"<span class=""badge bg-light text-muted border"">Нет</span>");
        }

        // Обработка дат
        if (field.DataType == FieldDataType.Date || field.DataType == FieldDataType.DateTime)
        {
            if (DateTime.TryParse(strVal, out DateTime dt))
            {
                var fmt = field.DataType == FieldDataType.Date ? "dd.MM.yyyy" : "dd.MM.yyyy HH:mm";
                return new HtmlString($@"<span class=""badge bg-light text-dark border"">{dt.ToString(fmt)}</span>");
            }
        }

        // Обработка строк, чисел, денег
        return new HtmlString($@"<span class=""badge bg-light text-dark border"" title=""{strVal}"">{Truncate(strVal)}</span>");
    }
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-@(definition?.Icon ?? "box")"></i> @definition?.Name</h2>
        <a asp-controller="GenericObjects" asp-action="Create" asp-route-entityCode="@definition?.EntityCode" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Добавить запись
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Название</th>
                        @if (definition?.Fields != null)
                        {
                            @foreach (var field in definition.Fields.OrderBy(f => f.SortOrder))
                            {
                                <th>@field.Label</th>
                            }
                        }
                        <th>Создано</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var dynamicValues = new Dictionary<string, object>();
                        if (!string.IsNullOrEmpty(item.Properties))
                        {
                            try 
                            {
                                dynamicValues = JsonConvert.DeserializeObject<Dictionary<string, object>>(item.Properties) 
                                               ?? new Dictionary<string, object>();
                            }
                            catch { }
                        }

                        <tr>
                            <td><strong>@item.Name</strong></td>
                            @if (definition?.Fields != null)
                            {
                                @foreach (var field in definition.Fields.OrderBy(f => f.SortOrder))
                                {
                                    <td>
                                        @if (dynamicValues.TryGetValue(field.SystemName, out var val) && val != null)
                                        {
                                            <div class="d-flex flex-column align-items-start gap-1">
                                            @if (field.IsArray && val is Newtonsoft.Json.Linq.JArray jArray)
                                            {
                                                @foreach (var subVal in jArray)
                                                {
                                                    @renderValue(field, subVal.ToString())
                                                }
                                            }
                                            else
                                            {
                                                @renderValue(field, val.ToString())
                                            }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">-</span>
                                        }
                                    </td>
                                }
                            }
                            <td class="text-muted small">@item.CreatedAt.ToString("g")</td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a asp-controller="GenericObjects" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-controller="GenericObjects" asp-action="Delete" asp-route-id="@item.Id" method="post" 
                                          onsubmit="return confirm('Удалить запись?');" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>