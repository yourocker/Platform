@using MedicalBot.Data
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity
@using MedicalBot.Entities.Company

@inject AppDbContext Context
@inject UserManager<Employee> UserManager

@{
// 1. Загружаем категории со всеми приложениями из базы (ТВОЙ КОД)
var customCategories = await Context.AppCategories
.Include(c => c.Apps)
.OrderBy(c => c.SortOrder)
.ToListAsync();

var controller = ViewContext.RouteData.Values["Controller"]?.ToString();
var action = ViewContext.RouteData.Values["Action"]?.ToString();

// Сначала ищем в URL, если нет — берем из контроллера (ViewBag)
var entityCodeFromUrl = ViewContext.RouteData.Values["entityCode"]?.ToString()
?? ViewBag.EntityCode?.ToString();

// Логика определения активности разделов (ТВОЙ КОД)
var isCompanyActive = controller == "Positions" || controller == "Departments" || controller == "Employees" ||
customCategories.Any(c => c.IsSystem && c.Name == "Компания" && c.Apps.Any(a => a.EntityCode == entityCodeFromUrl));

var isPatientsActive = controller == "Patients" ||
customCategories.Any(c => c.IsSystem && c.Name == "Пациенты" && c.Apps.Any(a => a.EntityCode == entityCodeFromUrl));
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Medical CRM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root { --main-bg: #1e2229; --sub-bg: #ffffff; --accent: #0d6efd; }
        body { background-color: #f4f7f6; overflow: hidden; height: 100vh; display: flex; margin: 0; font-family: 'Segoe UI', sans-serif; }

        /* ЛЕВОЕ МЕНЮ 1 (Иконки) - ТВОЙ СТИЛЬ */
        #nav-main { width: 70px; background: var(--main-bg); display: flex; flex-direction: column; align-items: center; padding-top: 20px; z-index: 1050; flex-shrink: 0; }
        .main-btn { width: 48px; height: 48px; display: flex; align-items: center; justify-content: center; color: #a0a6ad; font-size: 1.5rem; margin-bottom: 12px; cursor: pointer; border-radius: 10px; transition: 0.2s; text-decoration: none; }
        .main-btn:hover, .main-btn.active { background: rgba(255,255,255,0.1); color: #fff; }
        .main-btn.active { color: var(--accent); background: #fff; }

        /* ЛЕВОЕ МЕНЮ 2 (Подменю) - ТВОЙ СТИЛЬ */
        #nav-sub { width: 240px; background: var(--sub-bg); border-right: 1px solid #dee2e6; display: flex; flex-direction: column; box-shadow: 2px 0 5px rgba(0,0,0,0.03); flex-shrink: 0; }
        .sub-header { padding: 25px 20px; font-weight: 700; font-size: 1.1rem; border-bottom: 1px solid #f0f0f0; height: 60px; display: flex; align-items: center; } /* height 60px чтобы совпасть с хедером */
        .sub-link { padding: 12px 20px; color: #495057; text-decoration: none; display: flex; align-items: center; transition: 0.15s; }
        .sub-link:hover { background: #f8f9fa; color: var(--accent); }
        .sub-link.active { color: var(--accent); background: #eef5ff; font-weight: 600; }
        .sub-link i { margin-right: 12px; }

        /* ВЕРХНЯЯ ШАПКА - НОВЫЙ КОД */
        header.navbar { height: 60px; background: white; border-bottom: 1px solid #dee2e6; flex-shrink: 0; padding: 0 20px; }

        /* ОСНОВНОЙ КОНТЕНТ */
        #main-area { flex-grow: 1; display: flex; flex-direction: column; overflow: hidden; }
        #content-wrapper { flex-grow: 1; overflow-y: auto; padding: 30px; position: relative; }
        .sortable-ghost { opacity: 0.2; }

        /* ПРАВОЕ МЕНЮ - НОВЫЙ КОД */
        #right-sidebar { width: 60px; background: #fff; border-left: 1px solid #dee2e6; display: flex; flex-direction: column; align-items: center; flex-shrink: 0; z-index: 1040; }
    </style>
</head>
<body>

<nav id="nav-main">
    <div id="sortable-menu" style="width: 100%; display: flex; flex-direction: column; align-items: center;">
        <a href="/" class="main-btn @(controller == "Home" ? "active" : "")" data-id="home" title="Дашборд">
            <i class="bi bi-speedometer2"></i>
        </a>

        <a href="/Employees" class="main-btn @(isCompanyActive ? "active" : "")" data-id="company" title="Компания">
            <i class="bi bi-building"></i>
        </a>

        <a href="/Patients" class="main-btn @(isPatientsActive ? "active" : "")" data-id="patients" title="Пациенты">
            <i class="bi bi-people"></i>
        </a>

        <a href="/Tasks" class="main-btn @(controller == "Tasks" ? "active" : "")" data-id="tasks" title="Задачи">
            <i class="bi bi-list-check"></i>
        </a>

        @foreach (var cat in customCategories.Where(c => !c.IsSystem))
        {
        var isActive = cat.Apps.Any(a => a.EntityCode == entityCodeFromUrl);
        <a href="/Data/@cat.Apps.FirstOrDefault()?.EntityCode" class="main-btn @(isActive ? "active" : "")" data-id="@cat.Id" title="@cat.Name">
            <i class="bi bi-@cat.Icon"></i>
        </a>
        }

        <a href="/AppDefinitions" class="main-btn @(controller == "AppDefinitions" || controller == "AppCategories" ? "active" : "")" data-id="settings" title="Конструктор">
            <i class="bi bi-gear"></i>
        </a>
    </div>
</nav>

<nav id="nav-sub">
    @if (isCompanyActive)
    {
    <div class="sub-header">Компания</div>
    <a href="/Departments" class="sub-link @(controller == "Departments" ? "active" : "")"><i class="bi bi-diagram-3"></i> Оргструктура</a>
    <a href="/Employees" class="sub-link @(controller == "Employees" ? "active" : "")"><i class="bi bi-person-badge"></i> Сотрудники</a>
    <a href="/Positions" class="sub-link @(controller == "Positions" ? "active" : "")"><i class="bi bi-briefcase"></i> Должности</a>

    var compCat = customCategories.FirstOrDefault(c => c.Name == "Компания");
    if (compCat != null) {
    var systemCodes = new[] { "Employee", "Department", "Position" };
    foreach (var app in compCat.Apps.Where(a => !systemCodes.Contains(a.EntityCode))) {
    <a href="/Data/@app.EntityCode" class="sub-link @(entityCodeFromUrl == app.EntityCode ? "active" : "")">
        <i class="bi bi-@app.Icon"></i> @app.Name
    </a>
    }
    }
    }
    else if (isPatientsActive)
    {
    <div class="sub-header">Пациенты</div>
    <a href="/Patients" class="sub-link @(controller == "Patients" ? "active" : "")"><i class="bi bi-person-lines-fill"></i> Реестр пациентов</a>

    var patCat = customCategories.FirstOrDefault(c => c.Name == "Пациенты");
    if (patCat != null) {
    foreach (var app in patCat.Apps.Where(a => a.EntityCode != "Patient")) {
    <a href="/Data/@app.EntityCode" class="sub-link @(entityCodeFromUrl == app.EntityCode ? "active" : "")">
        <i class="bi bi-@app.Icon"></i> @app.Name
    </a>
    }
    }
    }
    else if (controller == "Tasks")
    {
    <div class="sub-header">Задачи</div>
    <a href="/Tasks/CreatedByMe" class="sub-link @(action == "CreatedByMe" ? "active" : "")"><i class="bi bi-person-up"></i> Поставленные мной</a>
    <a href="/Tasks/AssignedToMe" class="sub-link @(action == "AssignedToMe" ? "active" : "")"><i class="bi bi-person-check"></i> Назначенные мне</a>
    <a href="/Tasks/CompletedTasks" class="sub-link @(action == "CompletedTasks" ? "active" : "")"><i class="bi bi-check2-all"></i> Выполненные</a>
    <a href="/Tasks/OverdueTasks" class="sub-link @(action == "OverdueTasks" ? "active" : "")"><i class="bi bi-calendar-x text-danger"></i> Просроченные</a>
    <hr />
    <a href="/Tasks" class="sub-link @(action == "Index" ? "active" : "")"><i class="bi bi-list-ul"></i> Все задачи</a>
    }
    else if (controller == "AppDefinitions" || controller == "AppCategories")
    {
    <div class="sub-header">Конструктор</div>
    <a href="/AppDefinitions" class="sub-link @(controller == "AppDefinitions" ? "active" : "")"><i class="bi bi-layers"></i> Список сущностей</a>
    <a href="/AppCategories" class="sub-link @(controller == "AppCategories" ? "active" : "")"><i class="bi bi-folder2-open"></i> Разделы меню</a>
    }
    else if (customCategories.Any(c => !c.IsSystem && c.Apps.Any(a => a.EntityCode == entityCodeFromUrl)))
    {
    var activeCat = customCategories.First(c => !c.IsSystem && c.Apps.Any(a => a.EntityCode == entityCodeFromUrl));
    <div class="sub-header">@activeCat.Name</div>
    @foreach (var app in activeCat.Apps)
    {
    <a href="/Data/@app.EntityCode" class="sub-link @(entityCodeFromUrl == app.EntityCode ? "active" : "")">
        <i class="bi bi-@app.Icon"></i> @app.Name
    </a>
    }
    }
    else
    {
    <div class="sub-header">Главная</div>
    <a href="/" class="sub-link active"><i class="bi bi-house"></i> Рабочий стол</a>
    }
</nav>

<div id="main-area">
    <header class="navbar d-flex align-items-center justify-content-between">
        <div class="d-none d-sm-block">
            <h5 class="m-0 text-muted">@ViewData["Title"]</h5>
        </div>

        <div class="d-flex align-items-center gap-3">
            <div class="text-end lh-1 d-none d-md-block" id="user-clock-container">
                <div class="fw-bold" id="clock-time" style="font-size: 1.1rem;">00:00</div>
                <small class="text-muted" id="clock-date" style="font-size: 0.8rem;">Loading...</small>
            </div>

            <div class="vr mx-2"></div>

            @if (User.Identity.IsAuthenticated)
            {
            var user = await UserManager.GetUserAsync(User);
            var displayName = user != null ? $"{user.FirstName} {user.LastName}" : User.Identity.Name;
            var timezone = user?.TimezoneId ?? "UTC";

            <input type="hidden" id="user-timezone" value="@timezone" />

            <div class="dropdown">
                <button class="btn btn-light dropdown-toggle d-flex align-items-center gap-2 border-0 bg-transparent p-0" type="button" data-bs-toggle="dropdown">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
                        @displayName?.Substring(0,1).ToUpper()
                    </div>
                </button>
                <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                    <li class="px-3 py-2 text-muted small">@displayName</li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <button class="dropdown-item" onclick="openProfileSettings()">
                            <i class="bi bi-person-gear me-2"></i> Настройки
                        </button>
                    </li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="dropdown-item text-danger">
                                <i class="bi bi-box-arrow-right me-2"></i> Выйти
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
            }
        </div>
    </header>

    <div id="content-wrapper">
        <main role="main">
            @RenderBody()
        </main>
    </div>
</div>

<div id="right-sidebar">
    <div class="p-3 text-center border-bottom text-primary" style="height: 60px; display: flex; align-items: center; justify-content: center;">
        <i class="bi bi-bell-fill fs-5" title="Уведомления"></i>
    </div>
    <div class="flex-grow-1 p-2 text-center text-muted small mt-2">
        <i class="bi bi-activity"></i>
    </div>
</div>

<div class="modal fade" id="profileModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content" id="profileModalContent">
            <div class="p-5 text-center">
                <div class="spinner-border text-primary" role="status"></div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script>
    // 1. Скрипт сортировки меню (ТВОЙ КОД)
    const el = document.getElementById('sortable-menu');
    if(el) {
        Sortable.create(el, {
            animation: 150,
            ghostClass: 'sortable-ghost',
            store: {
                get: (s) => localStorage.getItem('main-menu-order')?.split('|') || [],
                set: (s) => localStorage.setItem('main-menu-order', s.toArray().join('|'))
            }
        });
    }

    $(document).ready(function() {
        const order = localStorage.getItem('main-menu-order');
        if (order && order.length > 0) {
            const container = $('#sortable-menu');
            order.split('|').forEach(id => {
                const item = container.find(`[data-id="${id}"]`);
                if (item.length) container.append(item);
            });
        }
    });

    // 2. Скрипт Часов и Модалки (НОВЫЙ КОД)
    function updateClock() {
        const now = new Date();
        const timeString = now.toLocaleTimeString('ru-RU', { hour: '2-digit', minute: '2-digit' });
        const dateString = now.toLocaleDateString('ru-RU', { day: 'numeric', month: 'long' });

        const timeEl = document.getElementById('clock-time');
        const dateEl = document.getElementById('clock-date');

        if(timeEl) timeEl.innerText = timeString;
        if(dateEl) dateEl.innerText = dateString;
    }
    setInterval(updateClock, 1000);
    updateClock();

    function openProfileSettings() {
        const modal = new bootstrap.Modal(document.getElementById('profileModal'));
        modal.show();
        $('#profileModalContent').load('/Profile/GetSettings');
    }
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>