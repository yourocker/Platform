@model IEnumerable<MedicalBot.Entities.Company.Position>

@{
    ViewData["Title"] = "Справочник должностей";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-briefcase me-2"></i> Должности</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Добавить должность
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
            <tr>
                <th>Наименование</th>
                <th>Системное имя (код)</th>
                <th width="100"></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td><code class="text-muted">@item.SystemName</code></td>
                    <td class="text-end">
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Удалить должность?')">
                            <button type="submit" class="btn btn-link text-danger p-0">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="3" class="text-center py-4 text-muted">Должностей пока нет</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>