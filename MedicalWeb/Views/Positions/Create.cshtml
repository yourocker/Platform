@model MedicalBot.Entities.Company.Position

@{
    ViewData["Title"] = "Создание должности";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="d-flex align-items-center mb-4">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h2 class="mb-0">Новая должность</h2>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Наименование</label>
                        <input asp-for="Name" class="form-control form-control-lg" placeholder="Например: Врач-терапевт" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <div class="form-text">Официальное название должности в организации.</div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="SystemName" class="form-label fw-bold">Системное имя (код)</label>
                        <input asp-for="SystemName" class="form-control" placeholder="Например: doc_therapy" />
                        <span asp-validation-for="SystemName" class="text-danger"></span>
                        <div class="form-text">Используется для настройки прав доступа (необязательно).</div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-light px-4">Отмена</a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-check-lg me-1"></i> Сохранить
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}