@model IEnumerable<Core.Entities.Patient>

@{
    ViewData["Title"] = "Список пациентов";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>База пациентов</h2>
        <a asp-controller="GenericObjects" asp-action="Create" asp-route-entityCode="patient" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Добавить пациента
        </a>
    </div>

    <table id="patientsTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>ФИО</th>
                <th>Телефон</th>
                <th>Номер карты</th>
                <th>Комментарий</th>
                <th style="width: 100px;">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@patient.Id" class="text-decoration-none fw-bold">
                            @patient.FullName
                        </a>
                    </td>
                    <td>@patient.PhoneNumber</td>
                    <td>@patient.CardNumber</td>
                    <td>@patient.Comment</td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-controller="GenericObjects" asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-sm btn-outline-primary" title="Редактировать">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form asp-controller="GenericObjects" asp-action="Delete" asp-route-id="@patient.Id" method="post" onsubmit="return confirm('Удалить пациента?');" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Удалить">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#patientsTable').DataTable({
                language: {
                    "processing": "Подождите...",
                    "search": "Поиск:",
                    "lengthMenu": "Показать _MENU_ записей",
                    "info": "Записи с _START_ до _END_ из _TOTAL_ записей",
                    "infoEmpty": "Записи с 0 до 0 из 0 записей",
                    "infoFiltered": "(отфильтровано из _MAX_ записей)",
                    "zeroRecords": "Записи отсутствуют.",
                    "emptyTable": "В таблице отсутствуют данные",
                    "paginate": {
                        "first": "Первая",
                        "previous": "Предыдущая",
                        "next": "Следующая",
                        "last": "Последняя"
                    }
                },
                pageLength: 50,
                lengthMenu: [ [10, 25, 50, 100, -1], [10, 25, 50, 100, "Все"] ],
                stateSave: true,
                // Отключаем сортировку для колонки с кнопками
                columnDefs: [
                    { orderable: false, targets: 4 }
                ]
            });
        });
    </script>
}