@model Core.Entities.CRM.ServiceCategory
@{
    ViewData["Title"] = "Редактирование раздела";
}

<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col-12">
            <h3 class="fw-bold text-secondary"><i class="bi bi-folder2-open me-2"></i>Редактировать раздел</h3>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <form asp-action="EditCategory" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedAt" />

                <div class="row">
                    @* Основная информация *@
                    <div class="col-md-6 border-end">
                        <h5 class="mb-3 text-primary">Основная информация</h5>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Название раздела</label>
                            <input asp-for="Name" class="form-control" placeholder="Например: Офтальмология" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ParentCategoryId" class="form-label">Родительский раздел</label>
                            <select asp-for="ParentCategoryId" class="form-select" asp-items="ViewBag.Categories">
                                <option value="">-- Корневой раздел --</option>
                            </select>
                        </div>
                    </div>

                    @* Динамические поля *@
                    <div class="col-md-6 ps-4">
                        <h5 class="mb-3 text-success">Дополнительные поля (конструктор)</h5>
                        @if (ViewBag.DynamicFields != null && ((List<Core.Entities.Platform.AppFieldDefinition>)ViewBag.DynamicFields).Any())
                        {
                            <partial name="_DynamicFields" model="Model.Properties" />
                        }
                        else
                        {
                            <div class="alert alert-light border">
                                <small class="text-muted">Для разделов пока не настроены дополнительные поля в конструкторе.</small>
                            </div>
                        }
                    </div>
                </div>

                <hr class="my-4" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Отмена</a>
                    <button type="submit" class="btn btn-primary px-5 shadow-sm">Сохранить изменения</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}