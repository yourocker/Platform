@model Core.Entities.Company.Department
@{
    ViewData["Title"] = "Новое подразделение";
}

<div class="container-fluid px-4">
    <crm-page-header title="" icon="" subtitle=""></crm-page-header>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Properties" />

        <div class="row">
            <div class="col-lg-8">
                <div crm-card>
                    <div class="card-body p-4">
                        <crm-input label="Название подразделения" asp-for="Name" placeholder="Введите название..." required="required"></crm-input>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <crm-input label="Родительское подразделение">
                                    <select asp-for="ParentId" class="form-select form-select-sm shadow-none" asp-items="ViewBag.ParentId">
                                        <option value="">-- Корень организации --</option>
                                    </select>
                                </crm-input>
                            </div>
                            <div class="col-md-6">
                                <crm-input label="Руководитель">
                                    <select asp-for="ManagerId" class="form-select form-select-sm shadow-none" asp-items="ViewBag.ManagerId">
                                        <option value="">-- Не назначен --</option>
                                    </select>
                                </crm-input>
                            </div>
                        </div>
                    </div>
                </div>

                <div crm-card>
                    <div class="card-body p-4">
                        <partial name="_DynamicFields" model="Model" />
                    </div>
                </div>

                <div class="mt-4 pb-5 d-flex gap-2">
                    <button type="submit" crm-button variant="primary" icon="check-lg" class="px-5 shadow">Создать</button>
                    <a asp-action="Index" crm-button variant="outline-secondary">Отмена</a>
                </div>
            </div>
        </div>
    </form>
</div>