@model Core.Entities.Company.Department
@{
    ViewData["Title"] = "Удаление подразделения";
    bool canDelete = ViewBag.CanDelete ?? false;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div crm-card class="text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-octagon text-danger display-1 opacity-25"></i>
                    </div>
                    
                    <h3 class="fw-bold text-secondary mb-3">Удаление подразделения</h3>
                    
                    @if (!canDelete)
                    {
                        <div class="alert alert-danger border-0 shadow-sm mb-4 text-start small">
                            <i class="bi bi-x-circle-fill me-2"></i>
                            <strong>Удаление невозможно!</strong> @ViewBag.Reason
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning border-0 shadow-sm mb-4 text-start small">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            Вы уверены, что хотите удалить подразделение <strong>"@Model.Name"</strong>?
                        </div>
                    }

                    <div class="mb-4 text-start p-3 bg-light rounded border small">
                        <strong>Название:</strong> @Model.Name
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-grid gap-2">
                            @if (canDelete)
                            {
                                @* Версия кнопки, если удаление разрешено *@
                                <button type="submit" crm-button variant="danger" icon="trash" class="btn-lg">
                                    Подтвердить удаление
                                </button>
                            }
                            else
                            {
                                @* Версия кнопки, если удаление запрещено (без C# в атрибутах) *@
                                <button type="button" crm-button variant="danger" icon="slash-circle" class="btn-lg" disabled>
                                    Удаление невозможно
                                </button>
                            }
                            
                            <a asp-action="Index" crm-button variant="outline-secondary" class="btn-lg">
                                Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>