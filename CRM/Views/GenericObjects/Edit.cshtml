@model Core.Entities.Platform.GenericObject
@{ ViewData["Title"] = "Редактирование"; }

<div class="row justify-content-center">
    <div class="col-md-10">
        <h2 class="mb-4">Редактирование объекта</h2>
        
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EntityCode" />
            
            @* --- ОСНОВНЫЕ ПОЛЯ --- *@
            <div class="container-fluid px-0">
                <div class="row mb-3">
                    <label asp-for="Name" class="col-sm-2 col-form-label text-muted text-sm-end fw-bold">
                        Наименование <span class="text-danger">*</span>
                    </label>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>

            @* --- ДОПОЛНИТЕЛЬНЫЕ ПОЛЯ --- *@
            <partial name="_DynamicFields" />

            <div class="mt-4 pt-3 border-top">
                <button type="submit" class="btn btn-primary px-4">Сохранить</button>
                <a href="/Data/@Model.EntityCode" class="btn btn-link text-decoration-none">Отмена</a>
            </div>
        </form>
    </div>
</div>