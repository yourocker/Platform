@model Core.Entities.Platform.GenericObject
@{ ViewData["Title"] = "Редактирование: " + Model.Name; }

<div class="container-fluid px-4">
    <crm-page-header title="" icon="" subtitle=""></crm-page-header>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="EntityCode" />

                <div crm-card>
                    <div class="card-header bg-transparent border-0 pt-4 px-4">
                        <h5 class="fw-bold mb-0">Редактирование объекта</h5>
                        <div class="text-muted small">Тип: @ViewBag.DefinitionName</div>
                    </div>
                    <div class="card-body p-4">
                        <crm-input label="Наименование" asp-for="Name" placeholder="Введите название..." required="required"></crm-input>

                        <div class="mt-4 pt-4 border-top">
                            <partial name="_DynamicFields" model="Model" />
                        </div>
                    </div>
                </div>

                <div class="mt-4 pb-5 d-flex gap-2">
                    <button type="submit" crm-button variant="primary" icon="save" class="px-5 shadow">Сохранить изменения</button>
                    <a href="/Data/@Model.EntityCode" crm-button variant="outline-secondary">Назад к списку</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}