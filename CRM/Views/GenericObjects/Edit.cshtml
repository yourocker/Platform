@model Core.Entities.Platform.GenericObject

@{
    ViewData["Title"] = "Редактирование: " + Model.Name;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h4 class="mb-0">Редактирование: @Model.Name</h4>
                <div class="text-muted small">Тип объекта: @ViewBag.DefinitionName</div>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="EntityCode" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Наименование <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" placeholder="Введите название объекта" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <partial name="_DynamicFields" model="Model" />

                    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                        <a href="/Data/@Model.EntityCode" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Назад к списку
                        </a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-save"></i> Сохранить изменения
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}