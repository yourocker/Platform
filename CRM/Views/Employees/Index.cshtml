@model IEnumerable<Core.Entities.Company.Employee>

@{
    ViewData["Title"] = "Сотрудники";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Сотрудники</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus"></i> Новый сотрудник
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover mb-0 align-middle">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">ФИО</th>
                    <th>Телефон</th>
                    <th>Должность / Отдел</th>
                    <th class="text-center">Статус</th>
                    <th class="text-end pe-4" style="width: 150px;">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(item.IsDismissed ? "table-secondary opacity-75" : "")">
                        <td class="ps-4">
                            <div class="fw-bold">@item.LastName @item.FirstName @item.MiddleName</div>
                        </td>
                        <td>
                            @if (item.Phones != null && item.Phones.Any())
                            {
                                <small class="text-muted"><i class="bi bi-phone"></i> @item.Phones.First()</small>
                            }
                        </td>
                        <td>
                            @foreach (var app in item.StaffAppointments)
                            {
                                <div class="small mb-1">
                                    <span class="badge bg-light text-dark border">@app.Position?.Name</span>
                                    <span class="text-muted ms-1">@app.Department?.Name</span>
                                </div>
                            }
                        </td>
                        <td class="text-center">
                             @if (item.IsDismissed)
                             {
                                 <span class="badge bg-danger">Уволен</span>
                             }
                             else
                             {
                                 <span class="badge bg-success">Работает</span>
                             }
                        </td>
                        <td class="text-end pe-4">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Редактировать">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>