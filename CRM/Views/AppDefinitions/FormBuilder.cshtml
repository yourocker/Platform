@model Core.Entities.Platform.AppDefinition
@{
    Layout = null; // Отдельный лейаут для конструктора
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Конструктор формы: @Model.Name</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <link rel="stylesheet" href="~/css/form-builder.css" />
</head>
<body class="bg-light">

    <div class="builder-header d-flex justify-content-between align-items-center px-4 py-2 bg-white border-bottom shadow-sm fixed-top">
        <div class="d-flex align-items-center">
            <h5 class="m-0 me-3"><i class="bi bi-ui-checks-grid text-primary"></i> @Model.Name</h5>
            <span class="badge bg-secondary">Черновик</span>
        </div>
        <div>
            <button id="btnSaveLayout" class="btn btn-primary btn-sm me-2">
                <i class="bi bi-save"></i> Сохранить
            </button>
            <button onclick="window.close()" class="btn btn-outline-secondary btn-sm">
                Закрыть
            </button>
        </div>
    </div>

    <div class="builder-container d-flex">
        
        <div class="builder-sidebar bg-white border-end">
            <ul class="nav nav-tabs nav-fill" id="paletteTabs">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#tabFields">Поля</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#tabLayout">Разметка</a>
                </li>
            </ul>
            
            <div class="tab-content p-3 overflow-auto" style="height: calc(100vh - 100px);">
                
                <div class="tab-pane fade show active" id="tabFields">
                    <div class="text-muted small mb-2"><i class="bi bi-info-circle"></i> Перетащите поля на форму</div>
                    
                    <div id="fieldsPaletteList" class="d-flex flex-column gap-2">
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status"></div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="tabLayout">
                    <div class="d-flex flex-column gap-2">
                        <div class="palette-item draggable-tool" data-type="tab-control">
                            <i class="bi bi-folder2-open"></i> Вкладки
                        </div>
                        <div class="palette-item draggable-tool" data-type="group">
                            <i class="bi bi-card-heading"></i> Группа
                        </div>
                        <div class="palette-item draggable-tool" data-type="row">
                            <i class="bi bi-layout-three-columns"></i> Секция (Ряд)
                        </div>
                        <hr />
                        <small class="text-muted">Колонки</small>
                        <div class="palette-item draggable-tool" data-type="column" data-width="6">
                            <i class="bi bi-layout-split"></i> 2 Колонки (50/50)
                        </div>
                        <div class="palette-item draggable-tool" data-type="column" data-width="12">
                            <i class="bi bi-square"></i> 1 Колонка (100%)
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="builder-canvas-wrapper flex-grow-1 bg-light p-4">
            <div class="canvas-paper shadow-sm bg-white mx-auto p-4" id="formCanvas">
                <div class="canvas-placeholder text-center text-muted py-5">
                    <h4>Форма пуста</h4>
                    <p>Перетащите элементы из левой панели</p>
                </div>
            </div>
        </div>
    </div>

    <div id="builderTemplates" style="display:none;">
        
        <div class="palette-field" draggable="true">
            <i class="bi bi-grip-vertical text-muted"></i>
            <span class="field-label">Label</span>
            <small class="field-type text-muted ms-auto">Type</small>
        </div>

        <div class="canvas-element field-node" data-type="field">
            <div class="element-header">
                <span class="element-title">Field Name</span>
                <div class="element-actions">
                    <i class="bi bi-gear action-btn" title="Настроить"></i>
                    <i class="bi bi-x-lg action-btn text-danger" title="Убрать"></i>
                </div>
            </div>
            <div class="element-content">
                <input type="text" class="form-control form-control-sm" disabled placeholder="Поле ввода..." />
            </div>
        </div>

        <div class="canvas-element container-node group-node" data-type="group">
            <div class="element-header">
                <i class="bi bi-caret-down-fill me-1"></i>
                <span class="element-title fw-bold">Новая группа</span>
                <div class="element-actions">
                    <i class="bi bi-trash action-btn text-danger"></i>
                </div>
            </div>
            <div class="element-body drop-zone">
                </div>
        </div>

        <div class="canvas-element row-node" data-type="row">
            <div class="row g-2">
                </div>
            <div class="row-actions">
                <i class="bi bi-trash text-danger"></i>
            </div>
        </div>

        <div class="col column-node drop-zone border-dashed">
            </div>

    </div>

    <input type="hidden" id="appId" value="@Model.Id" />
    <input type="hidden" id="formId" value="@ViewBag.FormId" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/form-builder.js"></script> 
</body>
</html>