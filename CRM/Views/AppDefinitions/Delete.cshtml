@model Core.Entities.Platform.AppDefinition

@{
    ViewData["Title"] = "Удаление сущности";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div crm-card class="text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-octagon text-danger display-1 opacity-25"></i>
                    </div>
                    
                    <h3 class="fw-bold text-secondary mb-3">Подтвердите удаление</h3>
                    
                    <div class="alert alert-warning border-0 shadow-sm mb-4 text-start small">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Внимание!</strong> Это действие удалит сущность 
                        <strong class="text-dark">"@Model.Name"</strong> (@Model.EntityCode) 
                        и все связанные с ней динамические поля. Данные восстановить будет невозможно.
                    </div>

                    <div class="mb-4 text-start p-3 bg-light rounded border">
                        <div class="small text-muted text-uppercase fw-bold mb-2" style="font-size: 0.7rem;">Сведения об объекте</div>
                        <div class="mb-1"><strong>Название:</strong> @Model.Name</div>
                        <div class="mb-1"><strong>Код:</strong> <code>@Model.EntityCode</code></div>
                        <div>
                            <strong>Раздел:</strong> 
                            @if (Model.Category != null)
                            {
                                <span class="badge bg-white text-dark border fw-normal">
                                    <i class="bi bi-@Model.Category.Icon me-1 text-primary"></i> @Model.Category.Name
                                </span>
                            }
                            else
                            {
                                <span class="text-muted small">Не указан</span>
                            }
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-grid gap-2">
                            <button type="submit" crm-button variant="danger" icon="trash" class="btn-lg">
                                Подтвердить удаление
                            </button>
                            
                            <a asp-action="Index" crm-button variant="outline-secondary" class="btn-lg">
                                Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>