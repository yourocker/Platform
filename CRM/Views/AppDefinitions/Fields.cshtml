@using Core.Entities.Platform
@model Core.Entities.Platform.AppDefinition

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Конструктор</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-@Model.Icon"></i> Поля сущности: @Model.Name</h2>
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addFieldModal">
            <i class="bi bi-plus-circle"></i> Добавить поле
        </button>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Название</th>
                        <th>Системное имя</th>
                        <th>Тип данных</th>
                        <th class="text-center">Обязательное</th>
                        <th class="text-center">Множественное</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Fields.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">
                                Динамических полей пока нет. Нажмите "Добавить поле", чтобы расширить структуру.
                            </td>
                        </tr>
                    }
                    @foreach (var field in Model.Fields.OrderBy(f => f.SortOrder))
                    {
                        <tr>
                            <td><strong>@field.Label</strong></td>
                            <td><code>@field.SystemName</code></td>
                            <td>
                                <span class="badge bg-info text-dark">@field.DataType.ToRuName()</span>
                                @if (field.DataType == FieldDataType.EntityLink && !string.IsNullOrEmpty(field.TargetEntityCode))
                                {
                                    <br /><small class="text-muted">Цель: @field.TargetEntityCode</small>
                                }
                            </td>
                            <td class="text-center">
                                @if (field.IsRequired)
                                {
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                }
                                else
                                {
                                    <i class="bi bi-dash-circle text-muted"></i>
                                }
                            </td>
                            <td class="text-center">
                                @if (field.IsArray)
                                {
                                    <span class="badge bg-secondary">Да</span>
                                }
                                else
                                {
                                    <span class="text-muted small">Нет</span>
                                }
                            </td>
                            <td class="text-end">
                                <form asp-action="DeleteField" asp-route-id="@field.Id" method="post" onsubmit="return confirm('Удалить это поле? Данные в БД останутся в JSON, но поле перестанет отображаться.');">
                                    <button type="submit" class="btn btn-link text-danger p-0"><i class="bi bi-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="addFieldModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AddField" method="post">
                <input type="hidden" name="appDefinitionId" value="@Model.Id" />
                <div class="modal-header">
                    <h5 class="modal-title">Новое динамическое поле</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Название</label>
                        <input type="text" name="label" class="form-control" placeholder="" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Системное имя</label>
                        <input type="text" name="systemName" class="form-control" placeholder="name_name" required />
                        <div class="form-text">Только латиница и нижнее подчеркивание.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Тип данных</label>
                        <select name="dataType" id="dataTypeSelect" class="form-select" required onchange="toggleTargetEntitySelector()">
                            @foreach (var type in Enum.GetValues<FieldDataType>())
                            {
                                <option value="@type">@type.ToRuName()</option>
                            }
                        </select>
                    </div>

                    @* Блок выбора целевой сущности для связи (по умолчанию скрыт) *@
                    <div class="mb-3" id="targetEntityWrapper" style="display:none;">
                        <label class="form-label text-primary fw-bold">Целевая сущность (для связи)</label>
                        <select name="targetEntityCode" id="targetEntitySelect" class="form-select">
                            <option value="">-- Выберите объект --</option>
                            @if (ViewBag.AllDefinitions != null)
                            {
                                foreach (var def in (IEnumerable<AppDefinition>)ViewBag.AllDefinitions)
                                {
                                    <option value="@def.EntityCode">@def.Name (@def.EntityCode)</option>
                                }
                            }
                        </select>
                        <div class="form-text">Записи выбранного объекта будут доступны для выбора в этом поле.</div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" name="isRequired" id="reqCheck" value="true">
                                <label class="form-check-label" for="reqCheck">
                                    Обязательное
                                </label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" name="isArray" id="arrayCheck" value="true">
                                <label class="form-check-label" for="arrayCheck">
                                    Множественное
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Создать поле</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function toggleTargetEntitySelector() {
        const select = document.getElementById('dataTypeSelect');
        const wrapper = document.getElementById('targetEntityWrapper');
        const targetSelect = document.getElementById('targetEntitySelect');
        
        if (select.value === 'EntityLink') {
            wrapper.style.display = 'block';
            targetSelect.required = true;
        } else {
            wrapper.style.display = 'none';
            targetSelect.required = false;
        }
    }
</script>