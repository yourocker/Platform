@{
    var definition = ViewBag.Definition as Core.Entities.Platform.AppDefinition;
    ViewData["Title"] = definition?.Name;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0"><i class="bi bi-@definition?.Icon me-2"></i>@definition?.Name</h2>
        <small class="text-muted">Реестр записей для сущности @definition?.EntityCode</small>
    </div>
    @* ФАКТ: Мы используем GenericObjects, потому что там УЖЕ есть Create.cshtml *@
    <a asp-controller="GenericObjects" 
       asp-action="Create" 
       asp-route-entityCode="@definition?.EntityCode" 
       class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Добавить запись
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body py-5 text-center text-muted">
        <i class="bi bi-database-exclamation fs-1 mb-3 d-block"></i>
        <h5>Записей пока нет</h5>
        <p>Настройте поля в конструкторе и начните заполнять данные.</p>
    </div>
</div>