@model Core.Entities.Company.Position
@{ ViewData["Title"] = "Редактирование: " + Model.Name; }

<div class="container-fluid px-4">
    <crm-page-header title="" icon="" subtitle="">
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Вы уверены, что хотите удалить эту должность?');">
            <button type="submit" crm-button variant="outline-danger" icon="trash">Удалить</button>
        </form>
    </crm-page-header>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div crm-card>
                    <div class="card-header bg-transparent border-0 pt-4 px-4">
                        <h5 class="fw-bold mb-0">Основная информация</h5>
                    </div>
                    <div class="card-body p-4">
                        <crm-input label="Название должности" asp-for="Name" required="required"></crm-input>

                        <div class="mt-4 pt-4 border-top">
                            <partial name="_DynamicFields" model="Model" />
                        </div>
                    </div>
                </div>

                <div class="mt-4 pb-5 d-flex gap-2">
                    <button type="submit" crm-button variant="primary" icon="save" class="px-5 shadow">Сохранить</button>
                    <a asp-action="Index" crm-button variant="outline-secondary">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}