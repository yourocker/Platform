@model Core.Entities.Company.Position
@{ ViewData["Title"] = "Новая должность"; }

<div class="container-fluid px-4">
    <crm-page-header title="" icon="" subtitle=""></crm-page-header>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form asp-action="Create" method="post">
                <div crm-card>
                    <div class="card-body p-4">
                        <crm-input label="Название должности" asp-for="Name" placeholder="Например: Врач-терапевт" required="required"></crm-input>
                        
                        <div class="mt-4 pt-4 border-top">
                            <partial name="_DynamicFields" model="null" />
                        </div>
                    </div>
                </div>

                <div class="mt-4 pb-5 d-flex gap-2">
                    <button type="submit" crm-button variant="primary" icon="check-lg" class="px-5 shadow">Создать</button>
                    <a asp-action="Index" crm-button variant="outline-secondary">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>