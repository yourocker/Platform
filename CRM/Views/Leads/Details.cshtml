@model Core.Entities.CRM.Lead
@using Core.Entities.CRM
@{
    ViewData["Title"] = $"Лид: {Model.Name}";
    var ui = (Context.RequestServices.GetService(typeof(Core.Services.ICrmStyleService)) as Core.Services.ICrmStyleService)?.GetSettings();
    var timeline = ViewBag.TimelineEvents as List<CrmEvent> ?? new();
    var history = ViewBag.HistoryEvents as List<CrmEvent> ?? new();
}

<div class="container-fluid px-4 py-3">
    <crm-page-header title="@Model.Name" icon="person-plus" subtitle="Карточка лида">
        <div class="btn-group shadow-sm me-2">
            <button crm-button variant="white" icon="pin-angle" title="Закрепить"></button>
            <button crm-button variant="white" icon="share" title="Поделиться"></button>
        </div>
        <button crm-button variant="primary" icon="check2-all">Конвертировать в сделку</button>
    </crm-page-header>

    <div class="row g-4">
        <div class="col-lg-3 col-md-4">
            <div crm-card class="h-100 shadow-sm border-0" style="background-color: @ui.CardBgColor;">
                <div class="card-body p-4">
                    <h6 class="text-muted text-uppercase small fw-bold mb-4">Основная информация</h6>
                    
                    <div class="mb-4">
                        <label class="small text-muted d-block mb-1">Статус</label>
                        <span class="badge rounded-pill px-3 py-2" style="background-color: @(Model.CurrentStage?.Color ?? "#ccc"); font-size: 0.85rem;">
                            @Model.CurrentStage?.Name
                        </span>
                    </div>

                    <div class="mb-3 editable-field" data-property="Name">
                        <label class="small text-muted d-block">Название</label>
                        <div class="field-value fw-bold">@Model.Name</div>
                    </div>

                    <div class="mb-3 editable-field" data-property="ResponsibleId">
                        <label class="small text-muted d-block">Ответственный</label>
                        <div class="field-value">
                            <i class="bi bi-person-circle text-primary me-1"></i>
                            @(Model.Responsible?.FullName ?? "Не назначен")
                        </div>
                    </div>

                    <div class="mb-3 editable-field" data-property="ContactId">
                        <label class="small text-muted d-block">Контакт</label>
                        <div class="field-value">
                            <i class="bi bi-person-lines-fill text-muted me-1"></i>
                            @(Model.Contact?.FullName ?? "Связь не установлена")
                        </div>
                    </div>

                    <hr class="my-4 opacity-10">
                    <h6 class="text-muted text-uppercase small fw-bold mb-3">Динамические поля</h6>
                    <div id="dynamicFieldsContainer">
                        @* На следующих этапах здесь будет вывод JSON свойств *@
                        <span class="text-muted small italic">Используйте инлайновое редактирование для системных полей</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 col-md-8">
            <div crm-card class="mb-4 border-0 shadow-sm overflow-hidden">
                <div class="card-body p-0">
                    <textarea class="form-control border-0 shadow-none p-3" rows="3" placeholder="Оставить комментарий..." id="commentInput"></textarea>
                    <div class="bg-light p-2 d-flex justify-content-between align-items-center border-top">
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-link text-muted"><i class="bi bi-paperclip"></i></button>
                        </div>
                        <button crm-button variant="primary" size="sm" id="sendCommentBtn">Отправить</button>
                    </div>
                </div>
            </div>

            <ul class="nav nav-tabs border-0 mb-4" id="cardTabs">
                <li class="nav-item">
                    <button class="nav-link active border-0 bg-transparent fw-bold px-4 py-2" data-bs-toggle="tab" data-bs-target="#tab-timeline">Таймлайн</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link border-0 bg-transparent fw-bold px-4 py-2 text-muted" data-bs-toggle="tab" data-bs-target="#tab-history">История</button>
                </li>
            </ul>

            <div class="tab-content pt-2">
                <div class="tab-pane fade show active" id="tab-timeline">
                    <div class="timeline-container d-flex flex-column gap-3">
                        @foreach (var evt in timeline)
                        {
                            <div class="timeline-item d-flex gap-3">
                                <div class="timeline-icon-wrapper text-center pt-1" style="width: 40px;">
                                    <div class="rounded-circle shadow-sm d-flex align-items-center justify-content-center bg-white border" style="width: 32px; height: 32px;">
                                        <i class="bi @(evt.Type == CrmEventType.Comment ? "bi-chat-text text-primary" : "bi-gear-fill text-muted")"></i>
                                    </div>
                                </div>
                                <div crm-card class="flex-grow-1 border-0 shadow-sm mb-3">
                                    <div class="card-body p-3">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="fw-bold">@evt.Title</span>
                                            <span class="small text-muted">@evt.CreatedAt.ToString("g")</span>
                                        </div>
                                        <div class="text-dark">@evt.Content</div>
                                        <div class="mt-2 pt-2 border-top small text-muted">
                                            <i class="bi bi-person me-1"></i> @(evt.Employee?.FullName ?? "Система")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="tab-pane fade" id="tab-history">
                    <div crm-card class="border-0 shadow-sm p-0">
                        <table class="table table-sm table-hover align-middle mb-0">
                            <tbody class="small">
                                @foreach (var h in history)
                                {
                                    <tr>
                                        <td class="ps-3 py-2" style="width: 150px;">@h.CreatedAt.ToString("g")</td>
                                        <td class="fw-bold">@h.Title</td>
                                        <td>@h.Content</td>
                                        <td class="text-end pe-3 text-muted">@(h.Employee?.FullName ?? "System")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-12">
            <div class="d-flex flex-column gap-4">
                <div crm-card class="border-0 shadow-sm overflow-hidden">
                    <div class="card-header bg-white py-3">
                        <h6 class="mb-0 fw-bold">Задачи</h6>
                    </div>
                    <div class="card-body p-3">
                        <div class="text-center py-4 text-muted small">Активных задач нет</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .nav-tabs .nav-link.active { border-bottom: 3px solid @ui.PrimaryColor !important; color: @ui.PrimaryColor !important; }
    .editable-field { border-radius: 6px; padding: 4px; transition: all 0.2s; cursor: pointer; position: relative; }
    .editable-field:hover { background-color: rgba(0,0,0,0.03); }
    .editable-field:hover::after { content: '\F4CB'; font-family: 'bootstrap-icons'; position: absolute; right: 8px; top: 50%; transform: translateY(-50%); opacity: 0.3; }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // ЛОГИКА ИНЛАЙН-РЕДАКТИРОВАНИЯ
            document.querySelectorAll('.editable-field').forEach(field => {
                field.addEventListener('click', function() {
                    if (this.querySelector('input')) return; // Уже редактируется

                    const propertyName = this.getAttribute('data-property');
                    const valueContainer = this.querySelector('.field-value');
                    const oldValue = valueContainer.innerText.trim();

                    const input = document.createElement('input');
                    input.type = 'text';
                    input.className = 'form-control form-control-sm mt-1';
                    input.value = oldValue;

                    valueContainer.style.display = 'none';
                    this.appendChild(input);
                    input.focus();

                    // Сохранение при потере фокуса или Enter
                    input.addEventListener('blur', () => saveField(this, propertyName, input.value, oldValue, valueContainer));
                    input.addEventListener('keypress', (e) => {
                        if (e.key === 'Enter') input.blur();
                    });
                });
            });

            function saveField(container, name, newValue, oldValue, valueDisplay) {
                const input = container.querySelector('input');
                
                if (newValue === oldValue) {
                    input.remove();
                    valueDisplay.style.display = 'block';
                    return;
                }

                const formData = new FormData();
                formData.append('id', '@Model.Id');
                formData.append('name', name);
                formData.append('value', newValue);

                fetch('/Leads/UpdateProperty', {
                    method: 'POST',
                    body: formData
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        valueDisplay.innerText = newValue;
                        // Можно добавить тост-уведомление об успехе
                    } else {
                        alert(data.message || 'Ошибка сохранения');
                    }
                    input.remove();
                    valueDisplay.style.display = 'block';
                });
            }
        });
    </script>
}