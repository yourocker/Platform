@model Core.Entities.Platform.AppCategory
@{ ViewData["Title"] = "Редактирование раздела"; }
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="d-flex align-items-center mb-4">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm me-3"><i class="bi bi-arrow-left"></i></a>
            <h2 class="mb-0">Редактирование раздела</h2>
        </div>
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Icon" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-@Model.Icon"></i></span>
                            <input asp-for="Icon" class="form-control" />
                        </div>
                    </div>
                    <div class="mb-4">
                        <label asp-for="SortOrder" class="form-label fw-bold"></label>
                        <input asp-for="SortOrder" type="number" class="form-control" />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary px-5">Сохранить изменения</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>