@model Core.Entities.Platform.AppCategory
@{
    ViewData["Title"] = "Удаление";
    bool canDelete = ViewBag.CanDelete ?? false;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div crm-card class="text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        @* Иконка в точности как в контактах *@
                        <i class="bi bi-exclamation-octagon text-danger display-1 opacity-25"></i>
                    </div>
                    
                    <h3 class="fw-bold text-secondary mb-3">Подтвердите удаление</h3>
                    
                    @if (!canDelete)
                    {
                        @* Блок ошибки, если раздел нельзя удалить (из-за вложенных сущностей) *@
                        <div class="alert alert-danger border-0 shadow-sm mb-4 text-start">
                            <i class="bi bi-shield-lock me-2"></i> @ViewBag.Reason
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-4">
                            Вы действительно хотите безвозвратно удалить раздел меню<br/>
                            <strong class="text-dark fs-5">@Model.Name</strong>?
                        </p>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-grid gap-2">
                            @* Кнопка теперь называется одинаково и имеет тот же стиль *@
                            <button type="submit" 
                                    crm-button 
                                    variant="danger" 
                                    icon="trash" 
                                    class="btn-lg" 
                                    disabled="@(!canDelete)">
                                Удалить навсегда
                            </button>
                            
                            <a asp-action="Index" crm-button variant="outline-secondary" class="btn-lg">
                                Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>