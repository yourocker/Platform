@model Core.Entities.CRM.Contact
@{ ViewData["Title"] = "Удаление контакта"; }

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card border-0 shadow-lg">
            <div class="card-body p-5 text-center">
                <div class="display-1 text-danger mb-4"><i class="bi bi-exclamation-triangle"></i></div>
                <h2 class="fw-bold mb-3">Удаление</h2>
                <p class="text-muted mb-4 fs-5">
                    Вы действительно хотите безвозвратно удалить контакт:<br/>
                    <strong class="text-dark">@Model.FullName</strong>?
                </p>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-3">
                        <button type="submit" class="btn btn-danger btn-lg shadow-sm">Да, удалить</button>
                        <a asp-action="Index" class="btn btn-light btn-lg">Отмена</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>