@model Core.Entities.CRM.Contact
@{
    ViewData["Title"] = "Удаление";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div crm-card class="text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-octagon text-danger display-1 opacity-25"></i>
                    </div>
                    
                    <h3 class="fw-bold text-secondary mb-3">Подтвердите удаление</h3>
                    <p class="text-muted mb-4">
                        Вы действительно хотите безвозвратно удалить контакт<br/>
                        <strong class="text-dark fs-5">@Model.FullName</strong>?
                    </p>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-grid gap-2">
                            <button type="submit" crm-button variant="danger" icon="trash" class="btn-lg">
                                Удалить навсегда
                            </button>
                            <a asp-action="Index" crm-button variant="outline-secondary" class="btn-lg">
                                Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>